@model IEnumerable<MyWebProjection.Models.Personal>
@{
    ViewBag.Title = "Все пользователи";
}

<a asp-action="Create">Add a new User</a>

<table class="table">
  @foreach (var item in Model)
   {
    <tr>
        <td>@item.FirstName</td><td>@item.LastName</td><td>@item.MiddleName</td>
        <td>
            <a asp-action="Details" asp-controller="Home" class="btn btn-primary" asp-route-Id="@item.Id">Details</a>
            <a asp-action="Edit" asp-controller="Home" class="btn btn-primary" asp-route-Id="@item.Id">Edit</a>
            <a asp-action="Delete" asp-controller="Home" class="btn btn-primary" asp-route-Id="@item.Id">Delete</a>
        
        </td></tr>
   }
</table>